@model Desafio.DTO.ProjetoDTO
@{
    ViewData["Title"] = "Novo projeto";
}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Adicionar um projeto</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
        <form asp-controller="Projeto" asp-action="Salvar">
            <input type="hidden" asp-for="Id" value="0">

            <div class="row">
            
                <div class="form-group col-md-5" asp-for="ModuloId">
                    <label asp-for="ModuloId">Modulo do projeto</label>
                    <select class="form-control" asp-for="ModuloId" asp-items='@(new SelectList(@ViewBag.Modulos, "Id", "Nome"))'></select>
                </div>

                <div class="form-group col-md-5" asp-for="StarterId">
                    <label asp-for="StarterId">Starter</label>
                    <select class="form-control" asp-for="StarterId" asp-items='@(new SelectList(@ViewBag.Starters, "Id", "Nome"))'></select>
                </div>

                <div class="form-group col-md-2" asp-for="Avaliacao">
                    <label asp-for="Avaliacao">Nota</label>
                    <input type="number" class="form-control" asp-for="Avaliacao" placeholder="Nota">
                    <span asp-validation-for="Avaliacao"></span><br>
                </div> 
            </div>

            <label asp-for="Comentario">Coment√°rios sobre o projeto</label>
            <textarea type="text" class="form-control" asp-for="Comentario" placeholder="Comentarios" rows="2"></textarea>
            <span asp-validation-for="Comentario"></span><br>

            <button class="btn btn-success">Salvar</button>
            <hr>
        </form>
        <hr>
    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
        
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
    <div class="p-3">
      <h5>Title</h5>
      <p>Sidebar content</p>
    </div>
  </aside>
  <!-- /.control-sidebar -->