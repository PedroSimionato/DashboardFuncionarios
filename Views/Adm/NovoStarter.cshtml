@model Desafio.DTO.StarterDTO
@{
    ViewData["Title"] = "Novo Starter";
}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Cadastrar um Starter!</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <form class="form-horizontal" asp-controller="Starter" asp-action="Salvar">
        <input type="hidden" asp-for="Id" value="0">
        
        <label asp-for="Nome">Nome</label>
        <input class="form-control" type="text" asp-for="Nome">
        <span asp-validation-for="Nome"></span><br>

        <div class="form-row">
            
            <div class="form-group col-md-4">
                <label asp-for="Letras">4 Letras</label>
                <input class="form-control" asp-for="Letras">
                <span asp-validation-for="Letras"></span><br>
            </div>
            
            <div class="form-group col-md-4">
                <label asp-for="TecnologiaId">Tecnologia</label>
                <select class="form-control" asp-for="TecnologiaId" 
                asp-items='@(new SelectList(@ViewBag.Tecnologias, "Id", "Tipo"))'></select>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="ProgramaId">Turma</label>
                <select class="form-control" asp-for="ProgramaId"
                asp-items='@(new SelectList(@ViewBag.Programas, "Id", "Turma"))'></select>
            </div>
        </div>

        <button class="btn btn-success">Salvar</button>

    </form>
    <hr>
    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
        
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
    <div class="p-3">
      <h5>Title</h5>
      <p>Sidebar content</p>
    </div>
</aside>
<!-- /.control-sidebar -->





