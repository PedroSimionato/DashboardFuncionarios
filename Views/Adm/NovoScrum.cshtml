@model Desafio.DTO.ScrumMasterDTO

<hr>
<form asp-controller="Scrum" asp-action="Salvar">
    
    <input type="hidden" asp-for="Id" value="0">

    <div class="form-row">

        <div class="form-group col-md-8">
            <label asp-for="Nome">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" placeholder="Nome do Scrum">
            <span asp-validation-for="Nome"></span><br>
        </div>
        
        <div class="form-group col-md-2">
            <label asp-for="Letras">4 Letras</label>
            <input type="text" class="form-control" asp-for="Letras" placeholder="Ex: POSM">
            <span asp-validation-for="Letras"></span><br>
        </div>

        <div class="form-group col-md-2">
            <label asp-for="TecnologiaId">Tecnologia</label>
            <select class="form-control" asp-for="TecnologiaId"
            asp-items='@(new SelectList(@ViewBag.Tecnologias, "Id", "Tipo"))'></select>
            <span asp-validation-for="TecnologiaId"></span><br>
        </div>
    </div>

    <button class="btn btn-success">Cadastrar</button>
</form>